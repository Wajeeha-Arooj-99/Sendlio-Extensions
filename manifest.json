{
  "manifest_version": 3,
  "name": "Sendlio Email Hunter",
  "version": "1.0",
  "description": "Automatically detects and saves emails from web pages",

  "icons": {
    "16": "icon16.png"
  },

  "action": {
    "default_title": "Sendlio Email Hunter",
    "default_popup": "dist/popup.html"
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
